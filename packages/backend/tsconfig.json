{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["./src/db/*"],
      "@lib/*": ["./lib/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}
